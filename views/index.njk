{% block content %}
    <div class="apresentacao-sobre">
        <div class="texto-apresentacao">
            <h1>{{infoHome.title}}</h1>
            <p>{{infoHome.content}}</p>
        </div>
        <div class="img-apresentacao">
            <img src="{{infoHome.img}}.png" alt="Imagem de {{infoHome.img}}">
        </div>
